{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": [
			"es5",
			"es6",
			"es2017",
			"dom"
		],
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"outDir": "dist",
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2017"
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts"
	],
	"include": [
		"src/**/*", "acorn-walk.d.ts"
	]
}
